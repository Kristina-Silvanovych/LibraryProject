@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Library.Models.AddBookBindingModel

<form asp-controller="Book" asp-action="AddBookSimple" method="post">
    <div class="modal-body">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>

        <br />

        <label asp-for="CountOfPages"></label>
        <input asp-for="CountOfPages" class="form-control" />
        <span asp-validation-for="CountOfPages" class="text-danger"></span>

        <br />

        <label asp-for="Genre"></label>
        <select asp-for="Genre" class="form-control">
            <option value=""> </option>
            <option value="Жахи">Жахи</option>
            <option value="Роман">Роман</option>
            <option value="Казка">Казка</option>
            <option value="Поезія">Поезія</option>
            <option value="Сонет">Сонет</option>
            <option value="Драма">Драма</option>
            <option value="Епос">Епос</option>
            <option value="Повість">Повість</option>
        </select>
        <span asp-validation-for="Genre" class="text-danger"></span>

        <br />

        <label asp-for="AuthorId"></label>
        <input asp-for="AuthorId" class="form-control" />
        <span asp-validation-for="AuthorId" class="text-danger"></span>

        <br />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>

    <div class="modal-footer">
        <button type="submit">Add</button>
    </div>
</form>