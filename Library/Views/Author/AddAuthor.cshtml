@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Library.Models.AddAuthorBindingModel

<!DOCKTYPE>
<html>
    <head>
       <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    </head>

  <body>
      <div style="display: flex;justify-content: center">
        <h3>Add author</h3>
      </div>
      <div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
          <div style="display: flex flex-direction: column; align-items: start">
            <form asp-controller="Author" asp-action="AddAuthor" method="post"
                      style="gap: 5px; display: flex; flex-direction: column; min-width: 50vw; width: 100%;">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
                <br />
                <label asp-for="Surname"></label>
                <input asp-for="Surname" />
                <span asp-validation-for="Surname"></span>
                <br />
                <label asp-for="FathersName"></label>
                <input asp-for="FathersName" />
                <span asp-validation-for="FathersName"></span>
                <br />
                <label asp-for="BirthDate"></label>
                <input asp-for="BirthDate" type="date"/>
                <span asp-validation-for="BirthDate"></span>
                <br />
                <div asp-validation-summary="ModelOnly"></div>
                <button type="submit">Add</button>
            </form>
          </div>
      </div>
  </body>
</html>
