@using System;
@model DataLayer.Entityes.Book;

@{
    Layout = "_Layout";
}

<!DOCKTYPE>
<html>
    <head>
       <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    </head>

<body>
    <div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
        <div style="display: flex flex-direction: column;; align-items: start">
             <p>Title: @(Model.Title.Length > 0 ? Model.Title : "")</p>
             <p>Pages Count: @(Model.PageCount > 0 ? Model.PageCount : "")</p>
             <p>Genre: @(Model.Genre.Length > 0 ? Model.Genre : "")</p>
             <p>Author id: @(Model.AuthorId > 0 ? Model.AuthorId : "")</p>
             <div style="display: flex; align-items: center; gap: 5px;">
                <a class="btn btn-primary" asp-controller="Book" asp-action="ChangeBooksData" role="button" style="min-width:100px">Change info</a>
                <div><form asp-controller="Book" asp-action="RemoveBook" method="post"><button class="btn btn-primary" type="submit" style="min-width:100px">Delete current book</button></form></div>
                <a class="btn btn-primary" asp-controller="Book" asp-action="BooksList" role="button" style="min-width:100px">Show books</a>
                <a class="btn btn-primary" asp-controller="Author" asp-action="AuthorsList" role="button" style="min-width:100px">Show authors</a>
        </div>
    </div>
</body>
</html>

